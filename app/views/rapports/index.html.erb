<% content_for :title do %>
  <i class="fa icon-cloudy1"></i> 
  Rapports Météo
<% end %>
<% content_for :subtitle, "Vue d'ensemble" %>
<% content_for :breadcrumbs do %>
  <div class="row">
    <div class="col-md-10">
      <ol class="breadcrumb">
        <li><a href="<%= root_path %>"><i class="fa fa-home"></i> <%= t :home %></a></li>
        <li class="active"><i class="fa icon-cloudy1"></i> Rapports Météo</li>
      </ol>
    </div>
    <div class="col-md-2">
      <a href="<%= refresh_rapports_path %>" class="btn btn-success btn-breadcrumb col-md-12 pull-right">
        <i class="fa fa-refresh"></i>
        Actualiser
      </a>
    </div>
  </div>
<% end %>

<div class="row">
  <% @rapports.each do |rapport| %>
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title pull-left">
            <i class="fa fa-desktop"></i>
            <%= rapport.xml.attachment_file_name %>
          </h3>
          <span class="btn-group pull-right">
            <% if can? :read, rapport %>
              <a href="<%= rapport_path(rapport) %>" class="btn btn-primary btn-sm">
                <i class="fa fa-arrow-right"></i><span class="hidden-xs"> Show</i>
              </a>
            <% end %>
            <% if can? :edit, rapport %>
              <a href="<%= edit_rapport_path(rapport) %>" class="btn btn-primary btn-sm">
                <i class="fa fa-edit"></i><span class="hidden-xs"> Edit</span>
              </a>
            <% end %>
            <% if can? :destroy, rapport %>
              <%= link_to rapport, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
                <i class="fa fa-trash-o"></i><span class="hidden-xs"> Delete</span>
              <% end %>
            <% end %>
          </span>
          <span class="clearfix"></span>
        </div>
        <div class="panel-body">
        </div>
      </div>
    </div>
  <% end %>
</div>
